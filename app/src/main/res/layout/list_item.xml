<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/cricket_background_color"
    app:strokeColor="@color/black"
    app:strokeWidth="2dp">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_id">

    <LinearLayout
        android:id="@+id/layout_playername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_playername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Franko"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@+id/layout_id"/>
        <View
            android:id="@+id/playername_leg_info_seperator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_legs"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="0/3"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_sets"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="0/2"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/name_points_seperator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/layout_playername"
        app:layout_constraintBottom_toTopOf="@id/points_layout"/>
    <TextView
        android:id="@+id/points_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cricket_table_element_height"
        android:text="0"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/name_points_seperator"
        app:layout_constraintBottom_toTopOf="@id/points_points_seperator"/>
    <View
        android:id="@+id/points_points_seperator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_playername"
        app:layout_constraintBottom_toTopOf="@id/fifteen_points_layout"/>
    <LinearLayout
        android:id="@+id/fifteen_points_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/cricket_table_element_height"
        app:layout_constraintTop_toBottomOf="@id/points_points_seperator">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name_points_seperator"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/iv_15_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_15_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_15_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/sixteen_fifteen_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/fifteen_points_layout"
        app:layout_constraintBottom_toTopOf="@id/sixteen_points_layout"/>
    <LinearLayout
        android:id="@+id/sixteen_points_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/cricket_table_element_height"
        app:layout_constraintTop_toBottomOf="@id/sixteen_fifteen_line">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sixteen_fifteen_line"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/iv_16_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_16_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_16_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/seventeen_sixteen_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/sixteen_points_layout"
        app:layout_constraintBottom_toTopOf="@id/seventeen_points_layout"/>
    <LinearLayout
        android:id="@+id/seventeen_points_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/cricket_table_element_height"
        app:layout_constraintTop_toBottomOf="@id/seventeen_sixteen_line">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/seventeen_sixteen_line"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/iv_17_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_17_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_17_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/eightteen_seventeen_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/seventeen_points_layout"
        app:layout_constraintBottom_toTopOf="@id/eightteen_points_layout"/>
    <LinearLayout
        android:id="@+id/eightteen_points_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/cricket_table_element_height"
        app:layout_constraintTop_toBottomOf="@id/eightteen_seventeen_line">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/eightteen_seventeen_line"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/iv_18_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_18_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_18_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/nineteen_eightteen_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/eightteen_points_layout"
        app:layout_constraintBottom_toTopOf="@id/nineteen_points_layout"/>
    <LinearLayout
        android:id="@+id/nineteen_points_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/cricket_table_element_height"
        app:layout_constraintTop_toBottomOf="@id/nineteen_eightteen_line">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/nineteen_eightteen_line"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/iv_19_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_19_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_19_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/twenty_nineteen_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/nineteen_points_layout"
        app:layout_constraintBottom_toTopOf="@id/twenty_points_layout"/>
    <LinearLayout
        android:id="@+id/twenty_points_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/cricket_table_element_height"
        app:layout_constraintTop_toBottomOf="@id/twenty_nineteen_line">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/twenty_nineteen_line"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/iv_20_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_20_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_20_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/bull_twenty_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/twenty_points_layout"
        app:layout_constraintBottom_toTopOf="@id/bull_points_layout"/>
    <LinearLayout
        android:id="@+id/bull_points_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/cricket_table_element_height"
        app:layout_constraintTop_toBottomOf="@id/bull_twenty_line">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bull_twenty_line"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/iv_bull_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_bull_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_bull_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/outlined_circle"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>