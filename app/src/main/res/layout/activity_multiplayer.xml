<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/start_green"
    android:orientation="vertical"
    android:paddingRight="@dimen/normal_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/main_multiplayer"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/big_title_size"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingTop="@dimen/padding_headline_top"
        android:padding="@dimen/padding_headline_bottom"
        android:layout_weight="1.6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="10sp"
        android:layout_weight="1.6">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Spiel:"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/game_settings_text_size"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="default Text"
            android:textSize="@dimen/game_settings_text_size"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/btn_normal"
            android:id="@+id/game_selection_button"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="10sp"
        android:layout_weight="1.6">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Winning Legs:"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/game_settings_text_size"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_winning_legs"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/game_settings_text_size"
            android:inputType="number"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="10sp"
        android:layout_weight="1.6">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Winning Sets:"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/game_settings_text_size"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_winning_sets"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="@dimen/game_settings_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="10sp"
        android:layout_weight="1.3">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Spieler:"
            android:gravity="center"
            android:textSize="@dimen/game_settings_text_size"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingTop="@dimen/padding_headline_top"
            android:padding="@dimen/padding_headline_bottom"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/add_icon"
                android:background="@drawable/btn_normal"
                android:id="@+id/btn_add_existing_player"
                android:layout_weight="1"
                android:layout_marginRight="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/add_person_icon"
                android:background="@drawable/btn_normal"
                android:id="@+id/btn_add_new_player"
                android:layout_weight="1"/>
        </LinearLayout>
            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20sp"
                android:paddingTop="10sp"
                android:paddingBottom="10dp"
                android:scrollbars="vertical"
                android:background="@drawable/btn_normal"
                android:visibility="gone"
                tools:visibility="invisible"
                android:id="@+id/w">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/player_names_layout">

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="@dimen/normal_padding"
        android:paddingTop="0sp"
        android:layout_weight="1.5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Spiel starten"
            android:textSize="@dimen/game_settings_text_size"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/btn_normal"
            android:id="@+id/start_game_button"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>





