<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cricket_background_color"
    tools:context=".activities.CricketActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cricket_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cricket_background_color"
        android:orientation="vertical">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="501"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/big_title_size"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingTop="@dimen/padding_headline_top"
                android:paddingBottom="@dimen/padding_headline_top"
                android:padding="@dimen/padding_headline_bottom"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/question_icon"
                android:background="@drawable/btn_normal"
                android:id="@+id/btn_rules"
                android:layout_weight="3"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_round_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Runde 1"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:paddingLeft="25dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_actual_player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Am Zug: Franko"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:paddingLeft="50dp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/cricket_title"
        android:id="@+id/ll_recycleview_and_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="15dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recycler"
            app:layout_constraintTop_toBottomOf="@+id/cricket_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:listitem="@layout/list_item"
            app:layout_constraintBottom_toTopOf="@id/table_layout"
            android:backgroundTint="@color/cricket_background_color"
            android:paddingBottom="10dp"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        app:layout_constraintTop_toBottomOf="@+id/ll_recycleview_and_table">
        <TableRow
            android:layout_gravity="center"
            android:layout_height="500dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/fifteen_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="15"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/table_lines"/>
            <TextView
                android:id="@+id/sixteen_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="16"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/table_lines"/>
            <TextView
                android:id="@+id/seventeen_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="17"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/table_lines"/>
            <TextView
                android:id="@+id/eightteen_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="18"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/table_lines"/>
        </TableRow>
        <TableRow
            android:layout_gravity="center"
            android:layout_height="500dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/nineteen_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="19"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/table_lines"/>
            <TextView
                android:id="@+id/twenty_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="20"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/table_lines"/>
            <TextView
                android:id="@+id/bull_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Bull"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/table_lines"/>
            <TextView
                android:id="@+id/miss_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Miss"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/table_lines"/>
        </TableRow>
        <TableRow
            android:layout_gravity="center"
            android:layout_height="500dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/single_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Single"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/table_lines"/>
            <TextView
                android:id="@+id/double_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Double"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/table_lines"/>
            <TextView
                android:id="@+id/triple_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Triple"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/table_lines"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Back"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/table_lines"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>