<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    app:strokeColor="@color/black"
    app:strokeWidth="2dp">

        <LinearLayout
            android:id="@+id/layout_playername"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_playername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Franko"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="@+id/layout_id"
                android:layout_weight="0.8"/>
            <View
                android:id="@+id/playername_leg_info_seperator"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_legs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/1"
                    android:textColor="@color/black"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/tv_sets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/1"
                    android:textColor="@color/black"
                    android:textSize="12dp"/>
            </LinearLayout>
            <View
                android:id="@+id/leg_info_points_seperator"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>
            <TextView
                android:id="@+id/tv_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="501"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@+id/layout_id"
                android:layout_weight="0.8"/>
            <View
                android:id="@+id/points_average_seperator"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_leg_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/1"
                android:textColor="@color/black"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tv_game_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/1"
                android:textColor="@color/black"
                android:textSize="12dp"/>
        </LinearLayout>
            <View
                android:id="@+id/average_double_seperator"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>
            <TextView
            android:id="@+id/tv_douple_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/9"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@+id/layout_id"
                android:layout_weight="1"/>


        </LinearLayout>
</com.google.android.material.card.MaterialCardView>